<div class="container" style="margin: 100px auto;">
     <div class="row">
        <div class="col-6 offset 3">
            <h4>Modificar la novedad</h4>
        <form action="/admin/novedades/modificar" method="post"
        enctype="multipart/form-data">
          <input type="hidden"value="{{novedad.id}}" name="id">
        <div class="form-group">
            <label for="">TÃ­tulo:</label>
             <input type="text" class="form-control" name="Titulo" value="{{novedad.Titulo}}">
        </div>
        <div class="form-group">
            <label for="">Subtitulo:</label>
             <textarea name="Subtitulo" class="form-control">{{novedad.Subtitulo}}</textarea>
        </div>
        <div class="form-group">
            <p>
                <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                </p>
                <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>
        </div>
        <div class="form-group">
            <label for="">Fecha:</label>
             <input type="text" class="form-control"  name="Fecha"value="{{novedad.Fecha}}">
        </div>
      <button type="submit" class="btn btn-success">Modificar</button> 
      </form>
              {{#if error}}
           <p style="color:red;">{{message}}</p>
              {{/if}}
        </div>
    </div>
</div>
