<div class="container" style="margin: 100px auto;">
     <div class="row">
        <div class="col-6 offset 3">
            <h4>Agregar una nueva novedad</h4>
        <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
        <div class="form-group">
             <input type="text" class="form-control" placeholder="Titulo" name="Titulo">
        </div>
        <div class="form-group">
             <textarea type="text" class="form-control" placeholder="Subtitulo" name="Subtitulo"></textarea>
        </div>
        <div class="form-group">
          <label>Imagen:<input type="file" class="form-control" name="imagen" id="imagen"/></label>
        <div class="form-group">
        </div>
             <textarea type="text" class="form-control" placeholder="Fecha" name="Fecha"></textarea>
        </div>
      <button type="submit" class="btn btn-success">Guardar</button> 
      </form>
       {{#if error}}
           <p style="color:red;">{{message}}</p>
           {{/if}}
        </div>
    </div>
</div>

